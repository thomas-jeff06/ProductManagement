@using ProductManagement.Entity;

@model List<Order>

@{
    ViewData["Title"] = "Pedidos";
}

<h1>Lista de Pedidos em Processo</h1>

<a class="btn btn-dark" href="@Url.Action("Index", "Home")"> <i class='bx bx-arrow-back'></i> Voltar</a>

@if (TempData["Error"] != null)
{
    <div id="divErro" class="alert alert-danger">
        @TempData["Error"]
        <button onclick="closedButtonDivErro()">
            <i class='bx bx-x'></i>
        </button>
    </div>
}

<div class="table-container">
    <table class="table table-dark border-primary" id="companyTable">
        <thead>
            <tr>
                <th class="orderId"></th>
                <th class="Identifier">Identificador</th>
                <th class="description">Descrição</th>
                <th class="totalValue">Valor Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody id="bodyCompanyTable">
            @foreach (var order in Model)
            {
                <tr>
                    <td class="orderId">@order.OrderId</td>
                    <td class="identifier">@order.Identifier</td>
                    <td class="description">@order.Description</td>
                    <td class="totalValue">@order.TotalValue</td>
                    <td class="Max-Width180">
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a class="btn btn-outline-danger" href="@Url.Action("RemoveOrder", "Order", new { orderId = order.OrderId})">Deletar</a>
                            <div class="social-media">
                                <a href="@Url.Action("UpdateOrder", "Order", new { orderId = order.OrderId})"><i class='bx bx-edit-alt'></i></a>
                                <a href="@Url.Action("GetProductsInOrder", "Order", new { orderId = order.OrderId})"><i class='bx bx-search'></i></a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
